        <RelativeLayout
            android:id="@+id/page_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorWhite"
            android:visibility="visible">


            <TextView
                android:id="@+id/hint_text_page_1"
                android:layout_width="@dimen/Dimen_350"
                android:layout_height="@dimen/dimen_90"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_30"
                android:background="@drawable/rectangular_shape"
                android:gravity="center"
                android:text="@string/first_question"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_20" />

            <Button

                android:id="@+id/button_question_1"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_below="@+id/hint_text_page_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/red_3_accurate"
                android:onClick="showQuestion1"
                android:paddingBottom="@dimen/Dimen_80"
                android:paddingLeft="@dimen/Dimen_10"
                android:paddingRight="@dimen/Dimen_10"
                android:text="@string/clickMe_button_text"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/size_20"
                android:visibility="visible" />


            <ImageView

                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_below="@+id/hint_text_page_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/character_t_1"
                android:paddingBottom="@dimen/Dimen_80"
                android:paddingLeft="@dimen/Dimen_10"
                android:paddingRight="@dimen/Dimen_10" />


            <RadioGroup
                android:id="@+id/radio_group_1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_question_1"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/rb_1_page_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@android:drawable/btn_radio"
                    android:gravity="center"
                    android:text="@string/text_rb__1_page_1"
                    android:textSize="@dimen/size_25" />

                <RadioButton
                    android:id="@+id/rb_2_page_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@android:drawable/btn_radio"
                    android:gravity="center"
                    android:text="@string/text_rb__2_page_1"
                    android:textSize="@dimen/size_25" />

                <RadioButton
                    android:id="@+id/rb_3_page_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@android:drawable/btn_radio"
                    android:gravity="center"
                    android:text="@string/text_rb__3_page_1"
                    android:textSize="@dimen/size_25" />

                <RadioButton
                    android:id="@+id/rb_4_page_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@android:drawable/btn_radio"
                    android:gravity="center"
                    android:text="@string/text_rb__4_page_1"
                    android:textSize="@dimen/size_25" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radio_group_1"
                android:layout_marginBottom="@dimen/dimen_5"
                android:layout_marginLeft="@dimen/Dimen_80"
                android:layout_marginRight="@dimen/Dimen_80"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back_btn_page_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Dimen_70"
                    android:layout_margin="@dimen/Dimen_10"
                    android:layout_weight="1"
                    android:background="@drawable/rectangular_shape"
                    android:text="@string/back"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_20" />


                <Button
                    android:id="@+id/next_btn_page_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Dimen_70"
                    android:layout_margin="@dimen/Dimen_10"
                    android:layout_weight="1"
                    android:background="@drawable/rectangular_shape"
                    android:onClick="onClickNextButtonPage1"
                    android:text="@string/next"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_20" />


            </LinearLayout>


        </RelativeLayout>

        <!--end of page 1-->


    </RelativeLayout>


</ScrollView>